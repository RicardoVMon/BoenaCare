<div class="container">
    <div class="row px-5">
        <div class="col-12">
            <div class="row">
                <div class="col-auto">
                    <a href="@Url.Action("ListadoPacientes", "Personal")" class="btn btn-primary btn-sm">
                        <i class="fa-solid fa-arrow-left"></i> Regresar
                    </a>
                </div>
            </div>
            <div class="row pt-3 pb-1">
                <div class="col-12">
                    <div class="display-3" style="font-size: 2.5rem;">Agregar Paciente</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Formulario para agregar pacientes -->
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="container-form ms-5 mt-4 mx-auto p-4 rounded shadow-lg" style="max-width: 900px; background-color: #f9f9f9;">
                <form>

                    <div class="row g-3 mt-2">
                        <!-- Cédula -->
                        <div class="col-md">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="PacienteCedula" placeholder="Cédula" required>
                                <label for="PacienteCedula">Cédula</label>
                            </div>
                        </div>
                        <!-- Nombre -->
                        <div class="col-md">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="PacienteNombre" placeholder="Nombre" required>
                                <label for="PacienteNombre">Nombre</label>
                            </div>
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <!-- Apellido Paterno -->
                        <div class="col-md">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="PacienteApellidoPaterno" placeholder="Apellido Paterno" required>
                                <label for="PacienteApellidoPaterno">Apellido Paterno</label>
                            </div>
                        </div>
                        <!-- Apellido Materno -->
                        <div class="col-md">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="PacienteApellidoMaterno" placeholder="Apellido Materno" required>
                                <label for="PacienteApellidoMaterno">Apellido Materno</label>
                            </div>
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <!-- Correo -->
                        <div class="col-md">
                            <div class="form-floating">
                                <input type="email" class="form-control" id="PacienteCorreo" placeholder="Correo" required>
                                <label for="PacienteCorreo">Correo</label>
                            </div>
                        </div>
                        <!-- Teléfono -->
                        <div class="col-md">
                            <div class="form-floating">
                                <input type="tel" class="form-control" id="PacienteTelefono" placeholder="Teléfono" required>
                                <label for="PacienteTelefono">Teléfono</label>
                            </div>
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <!-- Antecedentes Patológicos -->
                        <div class="col-md">
                            <div class="form-floating">
                                <textarea class="form-control" id="PacienteAntecedentesPatologicos" placeholder="Antecedentes Patológicos" required></textarea>
                                <label for="PacienteAntecedentesPatologicos">Antecedentes Patológicos</label>
                            </div>
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <!-- Antecedentes Personales -->
                        <div class="col-md">
                            <div class="form-floating">
                                <textarea class="form-control" id="PacienteAntecedentesPersonales" placeholder="Antecedentes Personales" required></textarea>
                                <label for="PacienteAntecedentesPersonales">Antecedentes Personales</label>
                            </div>
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <!-- Estilo de Vida -->
                        <div class="col-md">
                            <div class="form-floating">
                                <textarea class="form-control" id="PacienteEstiloVida" placeholder="Estilo de Vida" required></textarea>
                                <label for="PacienteEstiloVida">Estilo de Vida</label>
                            </div>
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <!-- ejercicio -->
                        <div class="col-md">
                            <div class="form-floating">
                                <select class="form-select" id="PacienteEjercicio" required>
                                    <option selected disabled value="">¿Hace ejercicio?</option>
                                    <option value="Si">Sí</option>
                                    <option value="No">No</option>
                                </select>
                                <label for="PacienteEjercicio">¿Hace ejercicio?</label>
                            </div>
                        </div>

                        <!-- Cantidad de agua -->
                        <div class="col-md">
                            <div class="form-floating">
                                <input type="number" class="form-control" id="PacienteAgua" placeholder="Litros de agua al día" step="0.1" required>
                                <label for="PacienteAgua">Litros de agua al día</label>
                            </div>
                        </div>
                    </div>

                    <div class="row g-3">
                        <!-- Foto de perfil -->
                        <div class="col-md">
                            <label for="PacienteFoto" class="form-label">Foto de perfil</label>
                            <input type="file" class="form-control" id="PacienteFoto" accept="image/*" required>
                        </div>
                    </div>

                    <!-- Botón Guardar -->
                    <div class="row g-2 mt-4">
                        <div class="col-md">
                            <button type="submit" class="btn btn-primary w-100">Guardar Paciente</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


