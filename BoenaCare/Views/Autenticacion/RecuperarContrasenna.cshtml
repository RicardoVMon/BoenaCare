
@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<nav class="navbar navbar-dark navbar-extend p-2" style="background-color: #1A2035;">
    <div class="container-fluid">
        <a class="navbar-brand fs-4 fw-bold" href="@Url.Action("Login","Autenticacion")">
            <i class="fa-solid fa-hand-holding-heart mx-2"></i> Al cuidado de su salud!
        </a>
    </div>
</nav>

<section class="container-fluid d-flex flex-grow-1 px-0">
    <div class="col">
        <img src="https://images.pexels.com/photos/4506109/pexels-photo-4506109.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" class="img-fluid" style="object-fit: cover; height: 100%" />
    </div>
    <div class="col d-flex align-items-center">
        <div class="container-fluid d-flex flex-column">
            <form class="pb-4 border-bottom px-5" action="" method="POST">
                <div class="text-center fw-bold" style="font-size: 10vh; color: #1F283E;">BoenaCare</div>
                <h2 class="mb-4 text-center" style="color: #1F283E;">Recuperación de Contraseña</h2>
                <p class="mb-5 text-center">Ingresá tu cédula para iniciar el proceso de recuperación. <br /> Se enviará un mensaje a tu correo asociado.</p>

                @if (ViewBag.MensajePantalla != null)
                {
                    <div class="alert alert-danger text-center" role="alert">
                        @ViewBag.MensajePantalla
                    </div>
                }

                @using (Html.BeginForm("RecuperarCuenta", "Autenticacion", FormMethod.Post))
                {
                    <div class="row">
                        <div class="col">
                            <div class="form-group form-floating mb-4">
                                @Html.TextBox("Cedula", null, new { @class = "form-control", @placeholder = "Cédula", @required = "true", @name = "cedula", @id = "cedula" })
                                <label class="form-label">Cédula</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary btn-lg" style="background-color:#1F283E; border-color: #1F283E;">
                            Recuperar
                        </button>
                    </div>

                    <div class="mt-3 text-center">
                        <a href="@Url.Action("Login", "Autenticacion")" class="under"> Iniciá Sesión</a>
                    </div>
                }

            </form>
        </div>
    </div>
</section>

