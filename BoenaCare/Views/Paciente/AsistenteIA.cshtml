<div class="row px-5">
    <div class="col-12">
        <div class="row">
            <div class="col-auto">
                <a href="@Url.Action("Listado", "Paciente")" class="btn btn-primary btn-sm">
                    <i class="fa-solid fa-arrow-left"></i> Regresar
                </a>
            </div>
        </div>
        <div class="row pt-3 pb-3">
            <div class="col-12">
                <div class="display-3" style="font-size: 2.5rem;">Paciente: Juan Pérez</div>
            </div>
        </div>

        <!--barra tabs-->
        <div class="row mt-2">
            <div class="col-12">
                <ul class="nav nav-tabs nav-fill">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("FichaClinica", "Paciente")">Ficha Clínica</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Tratamientos", "Paciente")">Tratamientos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Archivos", "Paciente")">Archivos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("AsistenteIA", "Paciente")">Asistente IA</a>
                    </li>
                </ul>

                <!-- Your cards with images -->
                <div class="container-fluid mt-4 bg-white">
                    <div class="row">
                        <!-- Saved Section -->
                        <div class="col-4" id="saved-section">
                            <div class="d-flex flex-column justify-content-around border-end h-100">
                                <h5 class="p-3 border-bottom text-center">Mensajes guardados</h5>
                                <div class="overflow-auto" style="max-height: 70vh;">
                                    <ul class="list-group list-group-flush">
                                        <!-- Sample saved messages -->
                                        <li class="list-group-item">Mensaje Guardado 1</li>
                                        <li class="list-group-item">Mensaje Guardado 2</li>
                                        <li class="list-group-item">Mensaje Guardado 3</li>
