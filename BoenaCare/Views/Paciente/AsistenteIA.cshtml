                            </div>
                        </div>

                        <!-- Chat Section -->
                        <div class="col-8" id="chat-section">
                            <div class="d-flex flex-column h-100">
                                <!-- Blank Space -->
                                <div id="blank-space" class="flex-grow-1 d-flex align-items-center justify-content-center border-bottom">
                                    <p class="text-muted">Empieza una conversación...</p>
                                </div>
                                <!-- Text Input Section -->
                                <div id="text-input" class="p-3">
                                    <form class="d-flex">
                                        <input type="text" class="form-control me-2" placeholder="Escribe tu mensaje..." />
                                        <button type="button" class="btn btn-primary">
                                            <i class="fa-solid fa-paper-plane"></i> Send
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    /* Ensure saved section is scrollable while maintaining its height */
    #saved-section .overflow-auto {
        height: calc(100vh - 50px); /* Adjust this value for the desired height */
    }

    /* Style for chat blank space */
    #blank-space {
        height: calc(100vh - 250px); /* Adjust this value for the desired height */
    }
</style>

